@{
    ViewData["Title"] = "Shop";
}

@model ShopItem

<div class="text-center">
    <h1 class="display-4">Delete</h1>
</div>

<form method="post" asp-action="Delete">
  <div class="form-group">
    <label asp-for="Name">Name</label>
        <input readonly asp-for="Name" class="form-control" placeholder="Item Name">
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input readonly asp-for="Description" class="form-control" placeholder="Item Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input readonly asp-for="Price" class="form-control" placeholder="Item Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock">Stock</label>
        <input readonly asp-for="Stock" class="form-control" placeholder="Item Stock">
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Producer">Producer</label>
        <input readonly asp-for="Producer" class="form-control" placeholder="Item Producer">
        <span asp-validation-for="Producer" class="text-danger"></span>
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>